{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vitest", "vite/client", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
