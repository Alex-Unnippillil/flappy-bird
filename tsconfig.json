{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "lib": ["ES2022", "DOM"],
    "noEmit": true,
    "types": ["vitest", "vite/client", "node"]
  },
  "include": ["src/**/*", "playgrounds/**/*"],
  "exclude": ["dist", "node_modules"]
}
